extends layout

block content
  h1= article.title
  h5 Written by #{author}
  p= article.body
  if user
    if user.id ==article.author
      .ui.buttons
        a.ui.button(href='/articles/edit/'+article._id) Edit
        .or
        a.ui.red.button.delete-article(href='#',data-id=article._id) Delete
